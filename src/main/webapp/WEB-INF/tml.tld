    <name>trh</name>
    <tag-class>com.translationexchange.j2ee.tags.TrhTag</tag-class>
    <body-content>JSP</body-content>
    <dynamic-attributes>true</dynamic-attributes>
    <description></description>
  </tag> -->   
  
</taglib>
